<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PantallaPrincipal"
    android:background="@color/white"
    android:gravity="center"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        >
        <ImageView
            android:layout_width="250dp"
            android:layout_height="100dp"
            android:src="@drawable/iberdrola_logo"
            android:layout_marginBottom="50dp"
            />
        <Button
            android:id="@+id/btnFacturas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/background_button_green"
            android:text="@string/pantalla_principal_facturas"
            android:layout_marginBottom="10dp"
            />
        <Button
            android:id="@+id/btnSmartSolar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/background_button_green"
            android:padding="10dp"
            android:text="@string/pantalla_principal_smart_solar"
            />
    </LinearLayout>
</LinearLayout>