<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >

    <include layout="@layout/toolbar_layout"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/filtros_fecha_emision"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    />
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="20dp"
                >
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/filtros_desde"
                        android:textColor="@color/darkGray"
                        />
                    <Button
                        android:id="@+id/btnDesde"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:text="@string/filtros_dia_mes_anio"
                        android:textColor="@color/black"
                        android:padding="10dp"
                        android:textSize="5pt"
                        android:background="@drawable/background_button_gray"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/filtros_hasta"
                        android:textColor="@color/darkGray"
                        />
                    <Button
                        android:id="@+id/btnHasta"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:text="@string/filtros_dia_mes_anio"
                        android:textColor="@color/black"
                        android:padding="10dp"
                        android:textSize="5pt"
                        android:background="@drawable/background_button_gray"
                        />
                </LinearLayout>
            </LinearLayout>
            <View
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginEnd="25dp"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@color/gray" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="20dp"
            >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/filtros_importe"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                >
                <TextView
                    android:id="@+id/tvImporte"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/green"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/darkGray"
                        android:text="@string/filtros_1euro"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/darkGray"
                        android:text="@string/filtros_300euros"
                        />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="20dp"
                >

                <SeekBar
                    android:id="@+id/skImporte"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="301"
                    android:min="1"
                    android:theme="@style/MySeekBar"
                    />
            </LinearLayout>
            <View
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginEnd="25dp"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@color/gray" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="20dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/filtros_por_estado"
                android:textColor="@color/black"
                android:textStyle="bold"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <CheckBox
                    android:id="@+id/cbPagadas"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="@string/filtros_checkbox_pagada"
                    android:buttonTint="@color/gray"
                    />
                <CheckBox
                    android:id="@+id/cbAnuladas"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="@string/filtros_checkbox_anuladas"
                    android:buttonTint="@color/gray"
                    />
                <CheckBox
                    android:id="@+id/cbCuotaFija"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="@string/filtros_checkbox_cuota_fija"
                    android:buttonTint="@color/gray"
                    />
                <CheckBox
                    android:id="@+id/cbPendientePago"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="@string/filtros_checkbox_pendiente_de_pago"
                    android:buttonTint="@color/gray"
                    />
                <CheckBox
                    android:id="@+id/cbPlanPago"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="@string/filtros_checkbox_plan_de_pago"
                    android:buttonTint="@color/gray"
                    />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="20dp"
            android:orientation="vertical"
            >
            <Button
                android:id="@+id/btnAplicar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/background_button_green"
                android:textColor="@color/white"
                android:text="@string/filtros_aplicar"
                />
            <Button
                android:id="@+id/btnEliminar"
                android:layout_margin="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:textColor="@color/green"
                android:text="@string/filtros_eliminar"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>